<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
      <% newListItems.forEach(function(eachItem){ %>

        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" onChange='this.form.submit()' name="deleteItem" value = <%= eachItem._id %> >
            <p><%= eachItem.task %></p>
          </div>
          <input type="hidden" name="listType" value = '<%= listTitle %>'></input>
        </form>

      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %> >+</button>
      </form>
  </div>

<%- include("footer") -%>
